{
  "name": "setup-ros",
  "version": "0.1.2",
  "description": "GitHub Action to setup a ROS 2 development environment",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/setup-ros.ts -o dist",
    "lint": "eslint src/**.ts src/*/*.ts",
    "prettier": "prettier --write .",
    "test": "eslint src/*.ts src/*/*.ts && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ros-tooling/setup-ros.git"
  },
  "keywords": [
    "actions",
    "ros2",
    "setup"
  ],
  "author": "ROS 2 Tooling Working Group",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/ros-tooling/setup-ros/issues"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "husky": "^5.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^6.8.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/index.js"
    }
  }
}
